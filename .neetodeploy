# NeetoDeploy Configuration
# Monolithic deployment with Rails + React

build_system: buildpacks
buildpacks:
  - neeto-deploy/nodejs
  - neeto-deploy/ruby
  - neeto-deploy/sqlite

# Build commands for monolithic setup
build:
  backend: cd webhooks-backend && bundle install --without development test
  frontend: cd webhooks-frontend && yarn install --frozen-lockfile && yarn build

processes:
  backend: cd webhooks-backend && bundle exec rails server -p 3001 -b 0.0.0.0
  frontend: cd webhooks-frontend && yarn dlx serve -s build -l 3000

env:
  NODE_ENV: production
  RAILS_ENV: production
  RAILS_SERVE_STATIC_FILES: true
  RAILS_LOG_TO_STDOUT: true
  DATABASE_URL: sqlite3:storage/production.sqlite3
  FORCE_SSL: false
  SECRET_KEY_BASE: $(openssl rand -hex 64)
